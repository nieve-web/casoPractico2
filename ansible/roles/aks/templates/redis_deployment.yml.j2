apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis
  template:
    metadata:
      labels:
        app: redis
    spec:
      initContainers:
        - name: fix-permissions
          image: busybox
          command: ["sh", "-c", "chown -R 1001:1001 /data && chmod -R 777 /data"]
          securityContext:
            runAsUser: 0  # Necesario para cambiar permisos como root
          volumeMounts:
            - name: redis-storage
              mountPath: /data
      containers:
        - name: redis
          image: "{{ acr_login_server }}/redis:6.0.8"
          ports:
            - containerPort: 6379
          env:
            - name: ALLOW_EMPTY_PASSWORD
              value: "yes"
          command: ["redis-server", "--appendonly", "yes"]
          securityContext:
            runAsUser: 1001  # Usuario que usar√° Redis
          volumeMounts:
            - name: redis-storage
              mountPath: /data
      volumes:
        - name: redis-storage
          persistentVolumeClaim:
            claimName: redis-pvc
