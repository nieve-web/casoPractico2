apiVersion: apps/v1
kind: Deployment
metadata:
  name: azure-vote-front
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: azure-vote-front
  template:
    metadata:
      labels:
        app: azure-vote-front
    spec:
      containers:
        - name: azure-vote-front
          image: "{{ acr_name }}/front/azure-vote-front:casopractico2"
          ports:
            - containerPort: 80
          env:
            - name: REDIS
              value: redis
